{
  // タイトル・ウィンドウ
  "window.title": "${dirty}${rootName}${separator}${activeEditorMedium}${separator}${appName}",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "default",

  // ファイル関連
  "files.associations": {
    "*.md": "markdown",
    "*.json.txt": "json",
    "*.yml": "ruby"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // markdown
  "markdown.preview.breaks": true,

  // CodeLens
  "editor.codeLens": true,

  // Python
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "python.dataScience.askForKernelRestart": false,

  // CodeLens
  "typescript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,

  // prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.semi": true,

  // 改行・エンコード
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // フォント設定
  "editor.fontFamily": "Myrica M,Ricty Diminished Discord,monospace,ＭＳ ゴシック,Osaka-Mono",
  "editor.fontSize": 16,
  "editor.lineHeight": 14,

  // Markdown
  "[markdown]": {
    "editor.fontFamily": "YuMincho, 游明朝, IPAPMincho",
    "editor.fontSize": 14,
    "editor.fontWeight": "bold"
  },

  // タブ設定
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  // "editor.renderWhitespace": "boundary", // 半角スペースが全角になるので無効化

  // ミニマップ
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 60,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,

  // 行の折り返し
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "indent",

  // Quick Open
  "workbench.quickOpen.closeOnFocusLost": false,

  // パンくずリスト
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // Zen Mode
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false,

  // 開発
  "npm.enableScriptExplorer": true,

  // カーソル
  "editor.cursorStyle": "block-outline",
  "editor.cursorBlinking": "expand",
  "editor.renderControlCharacters": true,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.roundedSelection": false,

  // テーマ
  "materialTheme.fixIconsRunning": false,

  // 拡張機能
  "extensions.ignoreRecommendations": false,

  // ターミナル
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 16,

  // remote
  "remote.SSH.configFile": "~/secret_dotfiles/.ssh/config",

  // https://marketplace.visualstudio.com/items?itemName=s-nlf-fh.glassit
  "glassit.alpha": 250,

  // https://marketplace.visualstudio.com/items?itemName=pnp.polacode
  "polacode.transparentBackground": true,

  // other
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "tabnine.experimentalAutoImports": true
}
